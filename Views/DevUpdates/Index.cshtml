    <script>
        // Filter, entry animation, and like/dislike logic
        document.addEventListener('DOMContentLoaded', function () {
            const cards = Array.from(document.querySelectorAll('.card'));
            const select = document.getElementById('filterSelect');
            const updatesCount = document.getElementById('updatesCount');

            // staggered reveal
            cards.forEach((c, i) => {
                setTimeout(() => c.classList.add('show'), 120 + i * 120);
            });

            // update count
            function updateCount() {
                const visible = cards.filter(c => !c.classList.contains('hidden'));
                updatesCount.textContent = visible.length + ' Updates';
            }

            // filter logic
            select.addEventListener('change', function () {
                const val = this.value;
                cards.forEach(c => {
                    if (val === 'All' || c.dataset.type === val) {
                        c.classList.remove('hidden');
                        // re-trigger show animation
                        c.classList.remove('show');
                        void c.offsetWidth;
                        c.classList.add('show');
                    } else {
                        c.classList.add('hidden');
                        c.classList.remove('show');
                    }
                });
                updateCount();
            });

            updateCount();

            // like/dislike logic (mutually exclusive)
            function updateDisplayCount(btn, role) {
                const parent = btn.closest('.stat-block');
                const numEl = parent.querySelector('[data-role="' + role + '-count"]') || parent.querySelector('.stat-num');
                // read dataset
                const cnt = parseInt(btn.dataset.count || '0', 10);
                numEl.textContent = cnt;
            }

            // event delegates for each card
            document.querySelectorAll('.card').forEach(card => {
                card.addEventListener('click', function (e) {
                    const likeBtn = e.target.closest('.like-btn');
                    const dislikeBtn = e.target.closest('.dislike-btn');

                    if (likeBtn) {
                        const wasLiked = likeBtn.dataset.liked === 'true';
                        let likeCount = parseInt(likeBtn.dataset.count, 10) || 0;
                        const siblingDislike = likeBtn.closest('.left-stats').querySelector('.dislike-btn');

                        // If previously disliked, remove that dislike
                        if (siblingDislike && siblingDislike.dataset.disliked === 'true') {
                            siblingDislike.dataset.disliked = 'false';
                            let d = parseInt(siblingDislike.dataset.count,10) || 0;
                            if (d > 0) {
                                siblingDislike.dataset.count = (d - 1).toString();
                                siblingDislike.closest('.stat-block').querySelector('[data-role="dislike-count"]').textContent = siblingDislike.dataset.count;
                            }
                            siblingDislike.classList.remove('active-dislike');
                        }

                        if (!wasLiked) {
                            likeBtn.dataset.liked = 'true';
                            likeBtn.dataset.count = (likeCount + 1).toString();
                            likeBtn.classList.add('active-like');
                        } else {
                            likeBtn.dataset.liked = 'false';
                            likeBtn.dataset.count = (likeCount - 1).toString();
                            likeBtn.classList.remove('active-like');
                        }

                        // update displayed number
                        const parent = likeBtn.closest('.stat-block');
                        parent.querySelector('[data-role="like-count"]').textContent = likeBtn.dataset.count;
                    }

                    if (dislikeBtn) {
                        const wasDisliked = dislikeBtn.dataset.disliked === 'true';
                        let dcount = parseInt(dislikeBtn.dataset.count, 10) || 0;
                        const siblingLike = dislikeBtn.closest('.left-stats').querySelector('.like-btn');

                        // If previously liked, remove that like
                        if (siblingLike && siblingLike.dataset.liked === 'true') {
                            siblingLike.dataset.liked = 'false';
                            let l = parseInt(siblingLike.dataset.count,10) || 0;
                            if (l > 0) {
                                siblingLike.dataset.count = (l - 1).toString();
                                siblingLike.closest('.stat-block').querySelector('[data-role="like-count"]').textContent = siblingLike.dataset.count;
                            }
                            siblingLike.classList.remove('active-like');
                        }

                        if (!wasDisliked) {
                            dislikeBtn.dataset.disliked = 'true';
                            dislikeBtn.dataset.count = (dcount + 1).toString();
                            dislikeBtn.classList.add('active-dislike');
                        } else {
                            dislikeBtn.dataset.disliked = 'false';
                            dislikeBtn.dataset.count = (dcount - 1).toString();
                            dislikeBtn.classList.remove('active-dislike');
                        }

                        // update displayed number
                        const parent = dislikeBtn.closest('.stat-block');
                        parent.querySelector('[data-role="dislike-count"]').textContent = dislikeBtn.dataset.count;
                    }
                });
            });
        });
    </script>

