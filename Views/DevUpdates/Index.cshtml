        color: #111827;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* container */
    .container {
        width: 92%;
        max-width: 1220px;
        margin: 0 auto;
    }

    /* Header (big gradient banner like screenshot) */
    .header {
        background: linear-gradient(90deg, #363675 46%, #5C5C73 100%, #942121 0%);
        color: #fff;
        padding: 54px 0 46px;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
        box-shadow: 0 12px 40px rgba(59,130,246,0.08);
    }

    .header-inner {
        text-align: center;
        position: relative;
    }

    .header-top-emoji {
        font-size: 34px;
        display: inline-block;
        margin-bottom: 12px;
        transform: translateY(-6px);
    }

    .title {
        font-size: 44px;
        margin: 6px 0 8px;
        font-weight: 700;
        letter-spacing: -0.6px;
    }

    .subtitle {
        margin: 0 auto;
        max-width: 900px;
        opacity: 0.95;
        font-size: 16px;
    }

    /* Breadcrumb */
    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 18px 0;
        color: var(--muted);
    }

        .breadcrumb a {
            color: var(--muted);
            text-decoration: none;
        }

        .breadcrumb .sep {
            opacity: 0.4;
        }

    /* Filter Box — large rounded with subtle internal gradient */
    .filter-box {
        background: linear-gradient(90deg, #ffffff 0%, #fbf8f3 45%, #f5f6ff 100%);
        border-radius: 16px;
        padding: 18px 20px;
        margin: 10px auto 28px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 10px 28px rgba(2,6,23,0.06);
    }

    .filter-left {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .filter-label {
        font-weight: 600;
        color: #111827;
        font-size: 14px;
    }

    .filter-ico {
        font-size: 16px;
        opacity: 0.9;
    }

    .filter-select {
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid #dfe7f2;
        background: linear-gradient(180deg,#fff,#fbfbfe);
        font-size: 14px;
        min-width: 220px;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.6);
    }

    .updates-count {
        background: linear-gradient(90deg,#eef2ff,#fff7ed);
        padding: 9px 12px;
        border-radius: 999px;
        font-weight: 700;
        color: #0f172a;
        box-shadow: 0 6px 18px rgba(59,130,246,0.06);
    }

    /* Grid layout */
    .card-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 22px;
        margin-bottom: 56px;
        align-items: stretch; /* make all cards align in same row */
    }

    /* Card */
    .card {
        background: linear-gradient(180deg, #ffffff, #fbfbfd);
        border-radius: 14px;
        padding: 18px;
        box-shadow: 0 8px 28px rgba(2,6,23,0.05);
        border: 1px solid rgba(15,23,42,0.03);
        transform-origin: center;
        transition: transform .28s cubic-bezier(.2,.9,.2,1), box-shadow .28s, opacity .28s;
        opacity: 0;
        transform: translateY(12px) scale(.995);
        /* force equal card height */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
        /* show/hide used by JS */
        .card.show {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        .card.hidden {
            display: none;
        }
        /* hover lift */
        .card:hover {
            transform: translateY(-6px) scale(1.01);
            box-shadow: 0 20px 50px rgba(2,6,23,0.09);
        }

    /* Card content */
